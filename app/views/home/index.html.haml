.hero-unit{ style: "padding-top: 20px;" }
  .row
    .span7
      %h1 Clan Stats!
      %p We are dedicated to keepin' it fresh. Clash on!
      %p{ style: "margin-bottom: 0px;" }  
        <strong>Clan Founder:</strong> Tank
      %p{ style: "margin-bottom: 0px;" }  
        <strong>Clan Leader:</strong> Agathorn
      %p{ style: "margin-bottom: 0px;" }
        <strong>Leader Emeritus:</strong> Vonhausen, bjt_16, MAJESTY 88
    .span3
      - if StatGroup.last
        %div{ style: 'margin-top: 20px;' }
          = link_to "Get Latest Stats!", StatGroup.last, class: 'btn btn-large btn-success'
          %p.text-info
            Last updated: #{StatGroup.last.updated_at.to_s(:normal_date)}
.row
  .span4
    %h2 
      = image_tag "clan_logo_trans.png"
      Most Trophies
    %p Clan mates with the most number of trophies!
    %ul.no_bullets.rankings
      - max_trophies.each do |stat|
        %li
          %span{ style: 'font-size: 25px;' } #{stat.trophies}
          = "- <strong>#{link_to(stat.member.name, stat.member)}</strong> on #{stat.updated_at.to_s(:normal_date)}".html_safe
    %p
      %a.btn.btn-primary{:href => top_rankings_stats_path} Full List »
  .span4
    %h2
      = image_tag "clan_logo_trans.png"
      Highest Levels
    %p Clan mates with the highest levels!
    %ul.no_bullets.rankings
      - max_levels.each do |stat|
        %li
          %span{ style: 'font-size: 25px;' } #{stat.level}
          = "- <strong>#{link_to(stat.member.name, stat.member)}</strong> on #{stat.updated_at.to_s(:normal_date)}".html_safe
    %p
      %a.btn.btn-primary{:href => top_rankings_stats_path} Full List »
  .span4
    %h2
      = image_tag "clan_logo_trans.png"
      Top Donations
    %p Clan mates with the most number of donations given!
    %ul.no_bullets.rankings
      - max_donations.each do |stat|
        %li
          %span{ style: 'font-size: 25px;' } #{stat.donated}
          = "- <strong>#{link_to(stat.member.name, stat.member)}</strong> on #{stat.updated_at.to_s(:normal_date)}".html_safe
    %p
      %a.btn.btn-primary{:href => top_rankings_stats_path} Full List »

